{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "composite": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
  //  "exclude": ["node_modules", "**/*.spec.ts"]
}
